--- 
import { Image } from 'astro:assets'; 
import Logo from '../assets/images/digitallogo.svg'; 
--- 

<nav class="bg-white text-gray-800 shadow-md font-sans">
  <div class="container mx-auto flex justify-between items-center px-6 py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center">
          <Image src={Logo} alt="Digital Link Technology" width="150" height="50" class="h-12 w-auto" />
      </a>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex flex-1 justify-center">
          <ul class="flex space-x-12 items-center text-4xl font-extrabold tracking-wide">
              <li>
                <a
                  href="/"
                  class="hover:text-blue-600 transition duration-300 py-3 px-4 border-b-4 border-transparent hover:border-blue-600"
                  >Home</a
                >
              </li>
              <li>
                <a
                  href="/about"
                  class="hover:text-blue-600 transition duration-300 py-3 px-4 border-b-4 border-transparent hover:border-blue-600"
                  >About</a
                >
              </li>
              <li>
                <a
                  href="/services"
                  class="hover:text-blue-600 transition duration-300 py-3 px-4 border-b-4 border-transparent hover:border-blue-600"
                  >Services</a
                >
              </li>
              <li>
                <a
                  href="/contact"
                  class="hover:text-blue-600 transition duration-300 py-3 px-4 border-b-4 border-transparent hover:border-blue-600"
                  >Contact Us</a
                >
              </li>
          </ul>
      </div>
      
      <!-- Get Started Button -->
      <div class="hidden md:flex">
          <a
              href="/contact"
              class="ml-4 bg-blue-600 hover:bg-blue-700 text-white font-bold text-2xl px-8 py-4 rounded-lg transition duration-300 shadow-lg"
              >Get Started</a
          >
      </div>
      
      <!-- Mobile Menu Toggle -->
      <button
          id="menu-toggle"
          class="md:hidden focus:outline-none"
          aria-label="Toggle navigation"
      >
          <svg
              class="w-8 h-8"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
          >
              <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
      </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden">
      <ul class="bg-white border-t border-gray-200 px-6 py-4 space-y-4 text-4xl font-extrabold tracking-wide">
          <li><a href="/" class="block hover:text-blue-600 transition duration-300 py-3 px-4">Home</a></li>
          <li><a href="/about" class="block hover:text-blue-600 transition duration-300 py-3 px-4">About</a></li>
          <li><a href="/services" class="block hover:text-blue-600 transition duration-300 py-3 px-4">Services</a></li>
          <li><a href="/contact" class="block hover:text-blue-600 transition duration-300 py-3 px-4">Contact Us</a></li>
          <li><a href="/contact" class="block mt-6 bg-blue-600 hover:bg-blue-700 text-white font-bold text-2xl px-8 py-4 rounded-lg transition duration-300 text-center shadow-lg">Get Started</a></li>
      </ul>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const toggleButton = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  toggleButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
  });
</script>