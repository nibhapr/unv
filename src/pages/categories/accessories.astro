---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const title = "Accessories - UNV Dubai";
const description =
    "Professional surveillance system accessories and mounting solutions";

const products = await getCollection("accessories");
---

<Layout title={title} description={description}>
    <section class="relative py-20 sm:py-32 overflow-hidden">
        {/* Animated Background Elements */}
        <div
            class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 dark:opacity-10"
        >
        </div>
        <div class="absolute inset-0">
            <div
                class="absolute -top-48 -left-48 h-96 w-96 rounded-full bg-primary/20 blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-48 -right-48 h-96 w-96 rounded-full bg-secondary/20 blur-3xl"
            >
            </div>
        </div>

        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            {/* Hero Section */}
            <div class="flex flex-col gap-8 lg:gap-12 text-center mb-24">
                <div class="space-y-4">
                    <div class="inline-flex justify-center">
                        <span
                            class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-4 py-2 text-primary dark:bg-primary/20"
                        >
                            <span class="relative flex h-3 w-3">
                                <span
                                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"
                                ></span>
                                <span
                                    class="relative inline-flex rounded-full h-3 w-3 bg-primary"
                                ></span>
                            </span>
                            Surveillance Accessories
                        </span>
                    </div>

                    <h1
                        class="text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl"
                    >
                        <span class="relative">
                            <span
                                class="absolute -inset-1 block -skew-y-3 bg-primary/20 dark:bg-primary/30"
                            ></span>
                            <span class="relative text-black dark:text-white">
                                Accessories
                            </span>
                        </span>
                    </h1>

                    <p
                        class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed"
                    >
                        {description}
                    </p>
                </div>
            </div>

            {/* Products Grid */}
            <div
                id="products"
                class="grid grid-cols-1 gap-12 sm:gap-16 lg:grid-cols-3"
            >
                {
                    products.map((product) => (
                        <a href={`/categories/accessories/${product.slug}`}>
                            <div class="group relative bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 ease-out border border-gray-100 dark:border-gray-700/50">
                                <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                <div class="aspect-h-3 aspect-w-4 overflow-hidden">
                                    <img
                                        src={product.data.image}
                                        alt={product.data.title}
                                        class="h-full w-full object-cover object-center transform group-hover:scale-110 transition-transform duration-700 ease-out"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                                </div>

                                <div class="relative p-8">
                                    <div class="flex items-center justify-between mb-4">
                                        <h3 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-700 dark:from-white dark:to-gray-300">
                                            {product.data.title}
                                        </h3>
                                        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary/10 dark:bg-primary/20 group-hover:scale-110 transition-transform duration-300">
                                            <svg
                                                class="w-6 h-6 text-primary"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"
                                                />
                                            </svg>
                                        </span>
                                    </div>

                                    <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                                        {product.data.description}
                                    </p>

                                    <div class="mt-8 space-y-4">
                                        {product.data.features
                                            .slice(0, 3)
                                            .map((feature: string) => (
                                                <div class="flex items-center space-x-3 group/feature">
                                                    <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full bg-primary/10 dark:bg-primary/20 group-hover/feature:scale-110 group-hover/feature:bg-primary/20 transition-all duration-300">
                                                        <svg
                                                            class="h-5 w-5 text-primary"
                                                            fill="none"
                                                            stroke="currentColor"
                                                            viewBox="0 0 24 24"
                                                        >
                                                            <path
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M5 13l4 4L19 7"
                                                            />
                                                        </svg>
                                                    </span>
                                                    <span class="text-gray-700 dark:text-gray-200 group-hover/feature:text-primary transition-colors duration-300">
                                                        {feature}
                                                    </span>
                                                </div>
                                            ))}
                                    </div>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>

