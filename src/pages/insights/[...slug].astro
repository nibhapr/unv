---
import Layout from "~/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
export async function getStaticPaths() {
  const insightPosts = await getCollection("insights");
  return insightPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}
const { post } = Astro.props;
const structuredData ={
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "image": "https://yourwebsite.com/images/insight-image.jpg",
  "url": `${Astro.url.origin}/insights/${post.slug}`,
  "datePublished": "2024-11-29",
  "dateModified": "2024-11-29",
   "publisher": {
    "@type": "Organization",
    "name": "unvdubai",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.url.origin}/unvdubai.png`,
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${Astro.url.origin}/blog`,
  }
}

---

<Layout title={post.data.title + "UNV camera Dubai | Digital link Technology"} structuredData={structuredData}>
 
  <section class="py-6 sm:py-8 lg:py-12">
    <div class="mx-auto max-w-screen-xl px-4 md:px-8">
      <div class="grid gap-8 md:grid-cols-2 lg:gap-12">
        <div>
          <div class="h-64 overflow-hidden rounded-lg shadow-lg md:h-auto">
            <Image
              class="h-full w-full object-cover object-center"
              src={post.data.cardImage}
              alt={post.data.cardImageAlt}
              draggable={"false"}
              format={"avif"}
            />
          </div>
        </div>

        <div class="md:pt-2">
          <h1
            class="mb-4 text-balance text-center text-2xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-3xl md:mb-6 md:text-left"
          >
            {post.data.title}
          </h1>
          <div class="space-y-8">
            {
              post.data.contents.map((content) => (
                <p class="text-pretty text-lg text-neutral-700 dark:text-neutral-300">
                  {content}
                </p>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
